<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:layout_margin="30dp"
              android:background="#FFF"
        >

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="请开启您的网络连接"
            android:textSize="25sp"
            />
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >
        <ImageView
                android:id="@+id/ig_dialog_wifi"
                android:layout_width = "0dp"
                android:layout_height = "100dp"
                android:src="@drawable/ic_dialog_wifi_off"
                android:scaleType="fitCenter"
                android:layout_weight="1"

                />
        <ImageView
                android:layout_width = "wrap_content"
                android:layout_height = "100dp"
                android:src="@drawable/my_line_vertical"
                />
        <ImageView
                android:id="@+id/ig_dialog_net"
                android:layout_width = "0dp"
                android:layout_height = "100dp"
                android:src="@drawable/ic_dialog_net_off"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                />

    </LinearLayout>
    <Button
            android:id="@+id/btn_dialog_off"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:background="@drawable/ic_dialog_off"
            />

</LinearLayout>